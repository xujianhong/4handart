<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/while_fb"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/while_fb"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_playing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/playing"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="@string/Share_playing" />


        <RadioButton
            android:id="@+id/rb_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sex_select_bg"
            android:button="@null"
            android:drawableLeft="@mipmap/like_false"
            android:drawablePadding="10dp"
            android:focusable="false"
            android:padding="5dp"
            android:textColor="@color/gray_8e"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_bean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/bean"
            android:drawablePadding="5dp"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="@color/red_e8"
            android:textSize="@dimen/text_14"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_ef" />

    <LinearLayout
        android:id="@+id/ll_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/while_fb"

        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:src="@mipmap/likepepole" />

        <TextView
            android:id="@+id/tv_pepole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_ef" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/Share_title"
        android:textColor="@color/black_1f"
        android:textSize="@dimen/text_13" />

</LinearLayout>
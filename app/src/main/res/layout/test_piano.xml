<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_2b">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:src="@mipmap/seek_piano_bg"/>
        <SeekBar
            android:id="@+id/sb_index"
            style="@style/pinao_SeekBar"

            android:thumbOffset="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>
<com.daomingedu.art.mvp.ui.widget.piano.MyHorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hs"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.daomingedu.art.mvp.ui.widget.piano.Piano_view xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</com.daomingedu.art.mvp.ui.widget.piano.MyHorizontalScrollView>
</LinearLayout>

